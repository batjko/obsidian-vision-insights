{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["DOM", "ES6"],
    "outDir": ".",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["main.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
} 